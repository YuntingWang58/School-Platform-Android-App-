<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="#D8B887">
    <EditText
        android:id="@+id/first_name_txt"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="90dp"
        android:background="#FFFAF1"
        android:hint="First Name"
        android:paddingLeft="5dp" />
    <EditText
        android:id="@+id/last_name_txt"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="#FFFAF1"
        android:hint="Last Name"
        android:paddingLeft="2dp" />
    <EditText
        android:id="@+id/year_txt"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="#FFFAF1"
        android:hint="Year"
        android:paddingLeft="2dp" />
    <EditText
        android:id="@+id/class_txt"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="#FFFAF1"
        android:hint="Class"
        android:paddingLeft="2dp" />
    <EditText
        android:id="@+id/parent_phone_txt"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="#FFFAF1"
        android:hint="Parent's Phone Number"
        android:paddingLeft="2dp" />

    <Button
        android:id="@+id/add_student_btn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:text="Confirm" />
</LinearLayout>