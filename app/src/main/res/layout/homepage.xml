<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".Homepage">



    <TextView
        android:id="@+id/ic_homepage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp"
        android:text="Fantastic School"
        android:textColor="#669e94"
        android:textSize="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <ImageButton
        android:id="@+id/logout"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="fitCenter"
        android:adjustViewBounds="false"
        android:src="@drawable/logout"
        android:background="@color/colorBackground"/>
    <!--    </RelativeLayout>-->

    <ImageButton
        android:id="@+id/ib_profile"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:padding="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ib_notification"
        app:layout_constraintTop_toBottomOf="@+id/ic_homepage"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/profile"
        android:background="#d8b887"/>

    <ImageButton
        android:id="@+id/ib_notification"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:padding="25dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ic_homepage"
        app:layout_constraintStart_toEndOf="@+id/ib_profile"
        android:src="@drawable/notification"
        android:background="#eeddc3"/>

    <ImageButton
        android:id="@+id/ib_event"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:padding="25dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="15dp"
        app:layout_constraintTop_toBottomOf="@id/ib_notification"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ib_mail"
        android:src="@drawable/events"
        android:background="#e3caab"/>

    <ImageButton
        android:id="@+id/ib_mail"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:padding="25dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/ib_notification"
        app:layout_constraintStart_toEndOf="@id/ib_event"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_message_black_24dp"
        android:background="#bf9674"/>


</androidx.constraintlayout.widget.ConstraintLayout>